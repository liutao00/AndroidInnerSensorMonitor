<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.zhengshuai.innersensor">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name=".activity.AccelerometerActivity"/>
        <activity android:label="@string/app_name" android:name=".activity.GravityActivity"/>
        <activity android:label="@string/app_name" android:name=".activity.LightActivity"/>
        <activity android:label="@string/app_name" android:name=".activity.ProximityActivity"/>
        <activity android:label="@string/app_name" android:name=".activity.GpsActivity"/>
        <activity android:label="@string/app_name" android:name=".activity.TemperatureActivity"/>
    </application>

</manifest>
